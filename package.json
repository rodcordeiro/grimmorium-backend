{
  "name": "grimmorium",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "npx knex migrate:latest",
    "start": "node ./build/src/server.js",
    "prebuild": "npm test && npx rimraf ./build",
    "build": "npx tsc -b",
    "postbuild": "cp -r ./public/ ./build/",
    "predev": "npx knex migrate:latest",
    "updateDb": "npx knex migrate:latest && npx knex seed:run",
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/server.ts",
    "test": "jest --colors"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-validator": "^6.14.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "sqlite3": "^5.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/bcryptjs": "2.4.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/morgan": "1.9.3",
    "@types/node": "16.11.32",
    "@types/uuid": "8.3.4",
    "cross-env": "7.0.3",
    "jest": "27.5.1",
    "rimraf": "3.0.2",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.4"
  },
  "jest": {
    "clearMocks": true,
    "rootDir": "./__tests__",
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testEnvironmentOptions": {
      "NODE_ENV": "test",
      "PORT": 3333
    },
    "collectCoverage": true,
    "coverageDirectory": "./coverage"
  }
}
